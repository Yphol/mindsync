<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_tertiary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_tertiary"
            app:title="MindSync"
            app:titleTextColor="@color/text_normal"/>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Dashboard Content -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/dashboardContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Today's Overview Card -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/CustomCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/chart_blue"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@color/background_tertiary">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TODAY'S OVERVIEW"
                                android:textColor="@color/chart_blue"
                                android:textSize="20sp"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LIVE"
                                android:textColor="@color/chart_blue"
                                android:background="@drawable/pill_background"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="4dp"
                                android:textSize="10sp"
                                android:letterSpacing="0.1"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>

                        <!-- Screen Time Chart -->
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/screenTimeChart"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginBottom="12dp"/>

                        <!-- Total Screen Time -->
                        <TextView
                            android:id="@+id/tvTotalScreenTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/chart_blue"
                            android:textSize="32sp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp"/>

                        <!-- Metrics Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <!-- Focus Score -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                
                                <TextView
                                    android:id="@+id/tvFocusScore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/chart_green"/>
                                    
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FOCUS"
                                    android:textSize="10sp"
                                    android:textColor="@color/text_muted"
                                    android:letterSpacing="0.1"/>
                            </LinearLayout>

                            <!-- Productive Time -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                
                                <TextView
                                    android:id="@+id/tvProductiveTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/chart_purple"/>
                                    
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PRODUCTIVE"
                                    android:textSize="10sp"
                                    android:textColor="@color/text_muted"
                                    android:letterSpacing="0.1"/>
                            </LinearLayout>

                            <!-- Success Rate -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                
                                <TextView
                                    android:id="@+id/tvSuccessRate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/chart_orange"/>
                                    
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SUCCESS"
                                    android:textSize="10sp"
                                    android:textColor="@color/text_muted"
                                    android:letterSpacing="0.1"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Active Restrictions Card -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/CustomCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active Restrictions"
                            android:textColor="@color/text_normal"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvActiveRestrictions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Active Limits -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/CustomCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active Limits"
                            android:textColor="@color/text_normal"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvActiveLimits"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Quick Actions -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/CustomCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quick Actions"
                            android:textColor="@color/text_normal"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStartFocusMode"
                            style="@style/CustomButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Start Focus Mode"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddRestriction"
                            style="@style/CustomButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Add App Restriction"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSetTimeLimit"
                            style="@style/CustomButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Set App Time Limit"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Fragment Container -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/background_tertiary"
        app:itemIconTint="@color/text_normal"
        app:itemTextColor="@color/text_normal"
        app:menu="@menu/bottom_nav_menu"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout> 